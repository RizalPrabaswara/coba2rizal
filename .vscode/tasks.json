{
    "version": "2.0.0",
    "tasks": [
        {
            "label" : "Babel Watch",
            "type": "shell",
            "group": "none",
            "command" : "${workspaceRoot}/coba2rizal/node_modules/.bin/babel",
            "args" : [
                "${workspaceRoot}/coba2rizal/asset/js/src/",
                "--config-file=${workspaceRoot}/coba2rizal/.babelrc",
                "--out-dir=${workspaceRoot}/coba2rizal/asset/js/dist/",
                "--watch"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
